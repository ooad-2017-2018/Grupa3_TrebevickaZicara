            <PasswordBox x:Name="passwordBox" Width="200" MaxLength="16" Background="White"
             PasswordChanged="passwordBox_PasswordChanged" PlaceholderText="password" Height="32" />
        </StackPanel>
        <Grid>
           <Button  Name="button" Click="button_click" Content=" Button"  Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0"></Button>
        </Grid>
        -->
    </Grid>
</Page>

